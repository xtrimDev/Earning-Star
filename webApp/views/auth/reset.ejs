<%- include("partials/header") -%>
  <div class="container">
    <div class="wrapper">
      <div class="title">
        <span>Set New Password</span>
      </div>
      <form id="setPassForm" method="POST">
        <div class="row">
          <i class="fas fa-lock"></i>
          <input type="password" name="password" placeholder="Enter your password..." autocomplete="off" required />
        </div>
        <div class="row">
          <i class="fas fa-lock"></i>
          <input type="password" name="confirmPassword" placeholder="Confirm your password..." autocomplete="off" required />
        </div>
        <div class="row hidden">
          <input type="text" name="userId" value='<%= userId %>' required hidden/>
        </div>
        <div class="row hidden">
          <input type="text" name="uniqueString" value='<%= uniqueString %>' required hidden/>
        </div>
        <div class="row button">
          <input type="submit" value="Change" />
        </div>
      </form>
    </div>
  </div>
  <%- include("partials/footer") -%>